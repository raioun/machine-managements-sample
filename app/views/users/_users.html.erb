<ul class="media-list">
  <% users.each do |user| %>
    <li class="media">
      <div>
        <p>ユーザ名：<%= user.name %></p>
      </div>
      <div>
        <p>状態：<%= user.status %></p>
      </div>
      <div>
        <%= link_to '詳細', user_path(user), class: 'btn btn-primary' %>
      </div>
    </li>
  <% end %>
  <%= paginate users %>
</ul>