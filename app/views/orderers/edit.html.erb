<div class="text-center">
  <h1>発注者編集</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@orderer) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
        <div class="form-group">
          <%= f.label :customer_id, '顧客企業名' %>
          <%= f.collection_select :customer_id, Customer.all, :id, :name, {}, {class: "mySelect2"} %>
        </div>
    
        <div class="form-group">
          <%= f.label :family_name, '姓' %>
          <%= f.text_field :family_name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :first_name, '名' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :phone_number, '電話番号' %>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :status, '状態' %>
          <%= f.select :status, Orderer.statuses.keys.to_a, {}, class: 'form-control' %>
        </div>
        
      <%= f.submit '登録', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<script>
$(document).ready(function() {
  $('.mySelect2').select2();
});
</script>