<div class="text-center">
  <h1>現場検索フォーム</h1>
</div>

<% if params[:project].nil? %>
<%= selected = nil %>
<%else %>
<%= selected = params[:project][:status] %>
<%end%>
<div class="text-center">
  <%= form_tag projects_path, :method => 'get' do |f| %>
    
    <div class="form-group">
      <%= label :customer, '顧客企業名' %>
      <%= text_field_tag :customer, params[:customer] %>
    </div>
    
    <div class="form-group">
      <%= label :name, '現場名' %>
      <%= text_field_tag :name, params[:name] %>
    </div>
    
    <div class="form-group">
      <%= label :status, '状態' %>
      <%= select :project,:status, {施工中: 0, 施工済み: 1},selected:  selected %>
    </div>
    
    <div><%= submit_tag "検索", :name => nil %></div>
  <% end %>
</div>

<%= render 'projects', projects: @projects %>