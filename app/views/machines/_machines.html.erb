<ul class="media-list">
  <% machines.each do |machine| %>
    <li class="media">
      <div>
        <p>機材名：<%= machine.name %>/<%= machine.type1 %>/<%= machine.type2 %></p>
      </div>
      <div>
        <%= link_to '詳細', machine_path(machine), class: 'btn btn-primary' %>
      </div>
    </li>
  <% end %>
  <%= paginate machines %>
</ul>