<div>
  <p>機材ID：<%= @machine.id %>の詳細ページ</p>
</div>
<div>
  <p>機材名：<%= @machine.name %></p>
</div>
<div>
  <p>型式1：<%= @machine.type1 %></p>
</div>
<div>
  <p>型式2：<%= @machine.type2 %></p>
</div>
<div class ="text-center">
  <p><%= link_to '現場一覧へ戻る', machines_path %></p>
</div>
<div class="text-center">
  <h1>この機材名・型式の機材一覧</h1>
</div>
<div class="text-center">
  <h2>検索フォーム</h2>
</div>

<% if params[:rental_machine].nil? %>
<%= selected = nil %>
<%else %>
<%= selected = params[:rental_machine][:status] %>
<%end%>

<div class="text-center">
  <%= form_tag machine_path, :method => 'get' do |f| %>
  
    <div class="form-group">
      <%= label :code, '機番' %>
      <%= text_field_tag :code, params[:code] %>
    </div>
      
    <div class="form-group">
      <%= label :status, '状態' %>
      <%= select :rental_machine,:status, {良品: 0, 重整備: 1, 廃棄済み: 2},selected:  selected %>
    </div>
    
    <div><%= submit_tag '検索', :name => nil %></div>
  <% end %>
</div>
  <%= render 'rental_machines/rental_machines', rental_machines: @rental_machines %>