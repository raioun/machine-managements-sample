<div class="text-center">
  <h1>機材編集</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@rental_machine) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
        <div class="form-group">
          <%= f.label :machine_id, '機材名' %>
          <%= f.collection_select :machine_id, Machine.all, :id, :machine_full_name, {}, {class: "mySelect2"} %>
        </div>
        
        <div class="form-group">
          <%= f.label :branch_id, '所有営業所名' %>
          <%= f.collection_select :branch_id, Branch.all, :id, :branch_full_name, {}, {class: "mySelect2"} %>
        </div>
        
        <div class="form-group">
          <%= f.label :storage_id, '保管場所' %>
          <%= f.collection_select :storage_id, Storage.all, :id, :storage_full_name, {}, {class: "mySelect2"} %>
        </div>
        
        <div class="form-group">
          <%= f.label :code, '機番' %>
          <%= f.text_field :code, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :remarks, '備考' %>
          <%= f.text_field :remarks, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :status, '状態' %>
          <%= f.select :status, RentalMachine.statuses.keys.to_a, {}, class: 'form-control' %>
        </div>
        
        
      <%= f.submit '登録', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<script>
$(document).ready(function() {
  $('.mySelect2').select2();
});
</script>